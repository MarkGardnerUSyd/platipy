{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Bronchus Segmentation Service (with auto-restart)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/segmentation/bronchus",
                "env": {
                    "WORK": "/data",
                    "PYTHONPATH": "/",
                    "REDIS_HOST": "redis",
                    "REDIS_PORT": "6379"
                }
            },
            "command": "watchmedo",
            "args": [
                "auto-restart",
                "--directory=./",
                "--pattern=*.py",
                "--recursive",
                "--",
                "python",
                "service.py"
            ],
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run Cardiac Segmentation Service (with auto-restart)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/segmentation/cardiac",
                "env": {
                    "WORK": "/data",
                    "PYTHONPATH": "/",
                    "REDIS_HOST": "redis",
                    "REDIS_PORT": "6379"
                }
            },
            "command": "watchmedo",
            "args": [
                "auto-restart",
                "--directory=./",
                "--pattern=*.py",
                "--recursive",
                "--",
                "python",
                "service.py"
            ],
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Refresh PlatiPy Docs",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "command": "sphinx-apidoc",
            "args": [
                "../platipy",
                "-f",
                "-o",
                "gen"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate HTML Docs",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "sphinx-build",
            "args": [
                "-b",
                "html",
                "docs",
                "docs/site"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}